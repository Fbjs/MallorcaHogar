      <script>
        document.addEventListener('DOMContentLoaded', function () {
          const carousel = document.getElementById('default-carousel');
          if (!carousel) {
            console.error('El carrusel no se encontró.');
            return;
          }
      
          const items = Array.from(carousel.querySelectorAll('[data-carousel-item]')) as HTMLElement[];
          const texts = document.getElementById('carousel-text') as HTMLElement | null;
          const indicators = Array.from(carousel.querySelectorAll('[data-carousel-slide-to]')) as HTMLElement[];
          let currentIndex = 0;
      
          const textsArray = [
            {
              title: 'Modelo 1',
              description: 'Características del producto 1.',
            },
            {
              title: 'Modelo 2',
              description: 'Características del producto 2.',
            },
            {
              title: 'Modelo 3',
              description: 'Características del producto 3.',
            },
            {
              title: 'Modelo 4',
              description: 'Características del producto 4.',
            },
          ];
      
          function showItem(index: number) {
            items.forEach((item, i) => {
              const element = item as HTMLElement;
              element.style.opacity = i === index ? '1' : '0';
              element.style.zIndex = i === index ? '1' : '0';
            });
      
            if (texts) {
              const { title, description } = textsArray[index];
              texts.innerHTML = `
                <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-2">${title}</h2>
                <p class="text-lg text-gray-800 dark:text-white">${description}</p>
              `;
            }
      
            indicators.forEach((indicator, i) => {
              indicator.classList.toggle('bg-white', i === index);
              indicator.classList.toggle('bg-white/60', i !== index);
            });
          }
      
          function showNextItem() {
            currentIndex = (currentIndex + 1) % items.length;
            showItem(currentIndex);
          }
      
          function showPreviousItem() {
            currentIndex = (currentIndex - 1 + items.length) % items.length;
            showItem(currentIndex);
          }
      
          function goToItem(index: number) {
            currentIndex = index;
            showItem(currentIndex);
          }
      
          // Auto-play every 5 seconds
          const intervalId = setInterval(showNextItem, 8000);
      
          // Event listeners for indicators
          indicators.forEach((indicator, i) => {
            indicator.addEventListener('click', () => {
              clearInterval(intervalId); // Stop auto-play when user interacts
              goToItem(i);
            });
          });
      
          // Event listeners for Previous/Next buttons
          const prevButton = carousel.querySelector('[data-carousel-prev]') as HTMLElement;
          const nextButton = carousel.querySelector('[data-carousel-next]') as HTMLElement;
      
          if (prevButton && nextButton) {
            prevButton.addEventListener('click', () => {
              clearInterval(intervalId); // Stop auto-play when user interacts
              showPreviousItem();
            });
      
            nextButton.addEventListener('click', () => {
              clearInterval(intervalId); // Stop auto-play when user interacts
              showNextItem();
            });
          }
      
          // Initialize first item
          showItem(currentIndex);
        });
      </script>
      <!-- Modelos -->
    </div>
  </div>
