---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
import heroImage from "../assets/slide-11-crop-u3839.jpg";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import pricing from "@data/pricing.json";
import featureImage from "@images/features-image.avif";
import lamina from "../assets/slide-01.jpg";
import persiana from "../assets/persiana-2.jpg";
import toldo from "../assets/toldo-retractil.jpg";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <!--AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Explore ScrewFast on GitHub"
    url="https://github.com/"
  /-->

  <HeroSection
    title=`Protección y Estilo para tu <span
        class="text-yellow-500 dark:text-yellow-400">Hogar y Negocio</span>`
    subTitle="Nuestros productos están respaldados por una sólida garantía, asegurando calidad y tranquilidad para nuestros clientes."
    primaryBtn="Explorar"
    primaryBtnURL="/products"
    secondaryBtn="Contáctanos"
    secondaryBtnURL="/contact"
    withReview={true}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.8</span> / 5`
    starCount={4}
    reviews=``
    src={heroImage}
    alt="Persianas Mallorca"
  />

  <!--FeaturesGeneral
    title="Meeting Industry Demands"
    subTitle="At ScrewFast, we tackle the unique challenges encountered in the hardware and construction sectors. From cutting-edge tools to expert services, we're dedicated to helping you overcome obstacles and achieve your goals."
    src={featureImage}
    alt="ScrewFast products in floating boxes"
    features={features}
  /-->

  <FeaturesNavs
    title=`Conoce los productos más <span class="text-yellow-500 dark:text-yellow-400">populares y seguros</span> para tu hogar.`
    tabs={[
      {
        heading: "Persianas",
        content:
          "La persiana española de Mallorca Hogar, en aluminio con lamas de poliuretano, brinda seguridad, aislamiento, control de luz y ahorro energético. Disponible en varios colores y con 5 años de garantía.",
        svg: "tools",
        src: persiana,
        alt: "Persiana Española",
        first: true,
      },
      {
        heading: "Toldos",
        content:
          "Nuestros toldos brindan sombra, protección UV y un toque decorativo a terrazas y ventanas, con lonas españolas y francesas. Incluyen 5 años de garantía.",
        svg: "dashboard",
        src: toldo,
        alt: "Toldo",
        second: true,
      },
      {
        heading: "Láminas de Seguridad",
        content:
          "Nuestro film de seguridad refuerza las ventanas para resistir impactos y contener vidrios rotos, evitando accidentes. También protege contra intrusos, asegurando tu hogar u oficina.",
        svg: "house",
        src: lamina,
        alt: "Lámina de seguridad",
      },
    ]}
  />

    <ClientsSection
    title="Confiado por líderes de la industria."
    subTitle="Experimenta la fiabilidad elegida por los gigantes del sector."
  />

  <FeaturesGeneral />

  <TestimonialsSection
    title="Transforma Tu Espacio con Mallorca Hogar"
    subTitle="En Mallorca Hogar nos dedicamos a mejorar la calidad de vida a través de la seguridad y protección de hogares y propiedades. Experimenta la vanguardia en tecnología y calidad en cada proyecto."
    testimonials={[
      {
        content:
          "Mallorca Hogar ha transformado la seguridad muchos hogares y oficinas. La atención al detalle y el compromiso con la calidad son excepcionales. La experiencia de más de 12 años se refleja en cada aspecto del servicio.",
        author: "Juan Pérez",
        role: "Gerente General",
        avatarSrc:
          "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
      },
    ]}
    statistics={[
      {
        count: "12+ años",
        description:
          "de experiencia en seguridad y protección del hogar",
      },
      {
        count: "200+",
        description: "soluciones de persianas y toldos que destacan por su calidad y durabilidad",
      }
      ,
      {
        count: "100%",
        description:
          "dedicación a la calidad y atención al cliente",
      },
      {
        count: "1000+",
        description: "productos de alta calidad instalados exitosamente en hogares y oficinas",
      },
    ]}
  />


  <!--PricingSection pricing={pricing} /-->

  <FAQ title="Preguntas<br />Frecuentes" faqs={faqs} />

